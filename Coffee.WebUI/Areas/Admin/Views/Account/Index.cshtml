}

<div class="card shadow mb-4" id="myModalUpdate">
    <div class="card-header py-3 d-flex align-items-center">
        <p href="javascript:void(0)" class="m-0 font-weight-bold text-primary">Tài khoản khách hàng</p>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="dataTable" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>#</th>
                    </tr>
                <tbody id="Review">
                    <!-- Order details will be dynamically inserted here -->
                </tbody>
                </thead>
            </table>
        </div>
