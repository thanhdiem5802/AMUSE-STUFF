@{
    ViewData["Title"] = "Liên Hệ";
}
@model Coffee.DATA.Models.Contact
<main>
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-overlay="white" data-opacity="5" data-background="../assets/images/bg/amuse.jpg">
       
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center">
                    <h2 class="page-title">Liên hệ với AmuseGift</h2>
                    <div class="cafena-breadcrumb breadcrumbs">
                        <ul class="list-unstyled d-flex align-items-center justify-content-center">
                            <li class="cafenabcrumb-item duxinbcrumb-begin">
                                <a asp-controller="Home" asp-action="Index"><span>Trang chủ</span></a>
                            </li>
                            <li class="cafenabcrumb-item duxinbcrumb-end">
                                <span>Liên hệ</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->
    <!-- contact area start -->
    <div class="contact__area position-relative pt-120 pb-120" style="padding-bottom:35px">
       
        <div class="container" id="contact">
            <div class="row">
                <div class="col-xl-12">
                    <div class="contact__wrapper">
                        <div class="row mt-none-30">
                            <div class="col-lg-4 col-md-6 mt-30">
                                <div class="contact-info d-flex align-items-center justify-content-center">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <img src="~/assets/images/icons/ci-1.png" alt="">
                                    </div>
                                    <div class="content">
                                        <h3 class="title">Liên hệ</h3>
                                        <a href="mailto:amusestuff001@gmail.com">amusestuff001@gmail.com</a>
                                        <a href="tel:0777539314">0777539314</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 mt-30">
                                <div class="contact-info d-flex align-items-center justify-content-center">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <img src="~/assets/images/icons/ci-2.png" alt="">
                                    </div>
                                    <div class="content">
                                        <h3 class="title">Địa chỉ</h3>
                                        <p>
                                            Khu đô thị FPT City, Ngũ Hành Sơn, Da Nang 550000, Vietnam
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 mt-30">
                                <div class="contact-info d-flex align-items-center justify-content-center">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <img src="~/assets/images/icons/ci-3.png" alt="">
                                    </div>
                                    <div class="content">
                                        <h3 class="title">Giờ mở cửa</h3>
                                        <p>Thứ 2 - Chủ nhật (7:00 am - 10:30 pm)</p>
                                    </div>
                                </div>
                            </div>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3835.8541218622067!2d108.2586164030663!3d15.968992695194162!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142116949840599%3A0x365b35580f52e8d5!2sFPT%20University%20Danang!5e0!3m2!1sen!2s!4v1716112269351!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                        </div>
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="contact__form mt-20">
                                    @if (ViewBag.Success != null)
                                    {
                                        <div id="success-alert" class="alert alert-success" role="alert">
                                            @ViewBag.Success
                                        </div>

                                        <script type="text/javascript">
                                            // Chỉ thực thi nếu alert chưa được hiển thị
                                            if (!window.alertShown) {
                                                setTimeout(function () {
                                                    var alertElement = document.getElementById("success-alert");
                                                    if (alertElement) {
                                                        alertElement.style.display = 'none';
                                                        
                                                    }
                                                }, 10000);
                                                B
                                                // Đặt biến alertShown để ngăn việc thực thi lại
                                                window.alertShown = true;
                                            }
                                        </script>
                                    }

                                    <form id="contactForm" asp-controller="Home" asp-action="Contact" method="post">
                                        <div class="row">
                                            <div class="col-xl-6 mt-30">
                                                <div class="form-group">
                                                    <input asp-for="Name" class="form-control" placeholder="Họ tên bạn">
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-xl-6 mt-30">
                                                <div class="form-group">
                                                    <input asp-for="Email" id="email" class="form-control" placeholder="Email">
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                    <span class="text-danger" id="checkEmailFalse" style="display: none">Email False</span>
                                                </div>
                                            </div>
                                            <div class="col-xl-12 mt-30">
                                                <div class="form-group">
                                                    <input asp-for="Title" class="form-control" placeholder="Nhập chủ đề">
                                                    <span asp-validation-for="Title" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-xl-12 mt-30">
                                                <div class="form-group">
                                                    <textarea asp-for="Content" class="form-control" placeholder="Nội dung muốn gửi"></textarea>
                                                    <span asp-validation-for="Content" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-xl-12 mt-20 text-center">
                                                <button type="button" id="submitBtn" class="site-btn">Gửi tin nhắn</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact area end -->
    <!-- map -->
    @section Scripts {
        <script>
            document.getElementById("submitBtn").addEventListener("click", function () {
                document.getElementById("contactForm").submit();
            });

            // Hàm để ẩn thông báo và chuyển hướng người dùng sau 3 giây
            function hideAlertAndRedirect() {
                setTimeout(function () {
                    var alertElement = document.getElementById("success-alert");
                    if (alertElement) {
                        alertElement.style.display = 'none';
                        window.location.href = '/'; // URL của trang chủ
                    }
                }, 3000);
            }

            // Gọi hàm sau khi trang đã tải xong
            window.onload = hideAlertAndRedirect;
        </script>
    }

